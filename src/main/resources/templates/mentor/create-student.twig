{% extends "classpath:/templates/mentor/nav.twig" %}

{% block content %}
    <div class="main-card">
        <div class="title">Create Studentr</div>
        <div class="form-container">
            <form method="POST">
                <fieldset>
                    <div class="input-text">First name:</div>
                    <br>
                    <input type="text" placeholder="enter first name" name = "first-name"><br>
                    <div class="input-text">Last name:</div><br>
                    <input type="text" placeholder="enter last name" name = "last-name"><br>
                    <div class="input-text">email:</div><br>
                    <input type="email" placeholder="enter email" name = "email"><br>
                    <div class="input-text">password:</div><br>
                    <input type="password" placeholder="enter password" name = password><br>
                    <div class="input-text">Class:</div>
                    <fieldset>
                        <select name="class">
                            {% for fundraise in groups %}
                                <option value={{ fundraise.name }}>
                                    {{ fundraise.name }}
                                </option>
                            {% endfor %}
                    </fieldset>
                    <input type="submit" value="Submit">
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}