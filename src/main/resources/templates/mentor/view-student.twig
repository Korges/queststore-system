{% extends "classpath:/templates/mentor/nav.twig" %}

{% block content %}
    <div class="table-container">
        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>e-mail</th>
                <th>group</th>
                <th>edit</th>
            </tr>
            </thead>
            <tbody>
            {% set ID = 1 %}
            {% for student in students%}
            <tr>
                <td>{{ID}}</td>
                <td>{{student.firstName}}</td>
                <td>{{student.lastName}}</td>
                <td>{{student.email}}</td>
                <td>{{student.klass}}</td>
                <td>
                    <form action = "" method = "post">
                        <button type="submit" name="id" value="{{ student.id }}" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-cog">edit</span>
                        </button>
                    </form>
                </td>
            <tr>
                {% set ID = ID + 1 %}
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
