{% extends "classpath:/templates/admin/nav.twig" %}

{% block content %}
    <div class="main-card">
        <div class="title">Create Mentor</div>
        <div class="form-container">
            <form method="POST">
                <fieldset>
                    <div class="input-text">First name:</div>
                    <br>
                <input type="text" placeholder="enter first name" name = "first-name" value="{{mentor.firstName}}"><br>
                    <div class="input-text">Last name:</div><br>
                <input type="text" placeholder="enter last name" name = "last-name" value="{{mentor.lastName}}"><br>
                    <div class="input-text">email:</div><br>
                <input type="email" placeholder="enter email"name = "email" value="{{mentor.email}}"><br>
                <input type="hidden" name="class" value="2016"/>
                <input type="hidden" name="password" value="{{mentor.password}}"/>
                <input type="hidden" name="id" value="{{mentor.id}}"/>
                <input type="submit" value="Submit">
            </fieldset>
        </form>
    </div>
</div>
{% endblock %}