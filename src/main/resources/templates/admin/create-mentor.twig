{% extends "classpath:/templates/admin/nav.twig" %}

{% block content %}
    <div class="main-container">
        <div class="header-container">
        </div>
        <div class="container">
            <form method="POST">
                <fieldset>
                    <legend>Create Mentor</legend>
                    First name:<br>
                    <input type="text" placeholder="enter first name" name = "first-name"><br>
                    Last name:<br>
                    <input type="text" placeholder="enter last name" name = "last-name"><br>
                    email:<br>
                    <input type="email" placeholder="enter email" name = "email"><br>
                    password:<br>
                    <input type="password" placeholder="enter password" name = password><br>
                    Class:
                    <fieldset>
                        <select name="class">
                            {% for fundraise in groups %}
                                <option value={{ fundraise.name }}>
                                    {{ fundraise.name }}
                                </option>
                            {% endfor %}
                    </fieldset>
                    <input type="submit" value="Submit">
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}