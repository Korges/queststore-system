{% extends "classpath:/templates/student/nav.twig" %}

{% block content %}
<div class="main-container">
    <div class="header-container">
        <h1>Create Fundraise</h1>
    </div>
    <div class="container">
        <form method="POST">
            <fieldset>
                Artifact<br>
                    <select name ="id">
                        {% for artifact in magicItemList %}
                            <option value={{ artifact.id }}>
                                {{ artifact.name }}
                            </option>
                        {% endfor %}
                    </select>
                Fundraise Title<br>
                <input type="text" placeholder="Enter Title" name = "title"><br>
                <input type="submit" value="Submit">
            </fieldset>
        </form>
    </div>
</div>
{% endblock %}