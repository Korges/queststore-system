{% extends "classpath:/templates/student/nav.twig" %}

{% block content %}
    <div class="main-card">
        <div class="title">Join Fundraise</div>
        <div class="form-container">
            <form method="POST">
            <fieldset>
                <select name="id" required>
                    {% for fundraise in fundraiseList %}
                        <option value={{ fundraise.fundraiseID  }}>
                            {{ fundraise.title }}
                        </option>
                    {% endfor %}
                    <input type="submit" value="Submit">
            </fieldset>
        </form>
    </div>
</div>
{% endblock %}