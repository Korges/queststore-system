{% extends "classpath:/templates/student/nav.twig" %}

{% block content %}
    <div class="table-container">
        <div class="header-container">
            <div class="title">View Fundraise</div>
            </div>
        <table class="table">
            <thead>
            <tr>
                <th>Fundraise ID</th>
                <th>Title</th>
                <th>Artifact</th>
                <th>Price</th>
            </tr>
            </thead>
            <tbody>
                {% for fundraise in fundraiseList %}
                    <tr>
                        <td>{{ fundraise.fundraiseID }}</td>
                        <td>{{ fundraise.title }}</td>
                        <td>{{ fundraise.name }}</td>
                        <td>{{ fundraise.price }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}